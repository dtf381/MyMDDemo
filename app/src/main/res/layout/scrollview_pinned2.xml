<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.sunjiajia.alldemo.view.MyScrollView
        android:id="@+id/scv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/author" />

            <TextView
                android:id="@+id/move"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="#00ff00"
                android:gravity="center"
                android:text="老子就是要动，不服打我" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/snow_flake1" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_user_background" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#50ff0000"
                android:gravity="center"
                android:text="图片浏览" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/dialog_desktop" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#50ff0000"
                android:gravity="center"
                android:text="图片浏览" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/image" />
        </LinearLayout>
    </com.sunjiajia.alldemo.view.MyScrollView>


    <TextView
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#000000"
        android:gravity="center"
        android:text="打死我也不会动的，我是搜索哥(搜索按钮)"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/stop"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/head"
        android:background="#00ff00"
        android:gravity="center"
        android:text="老子就是要动，不服打我"
        android:visibility="gone" />

</RelativeLayout>